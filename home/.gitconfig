[user]
	name = Vladimir Bobes Tuzinsky
	email = vladimir@tuzinsky.com

[core]
	editor = vim
	excludesfile = /home/bobes/.gitignore
	pager = less -FRSX
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[branch]
	autosetupmerge = true

[color]
	diff = auto
	branch = auto
	interactive = auto
	pager = true
	status = auto
	ui = auto

[color]
	diff = auto
	branch = auto
	interactive = auto
	pager = true
	status = auto
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
[color "status"]
	added = green
	changed = red
	untracked = cyan

[diff]
	renames = copy

[format]
	pretty = %C(yellow)%h%C(red)%d %C(reset)%s %C(green)%an %C(bold black)%ci

[log]
	date = iso

[pager]
	status = true
	show-branch = true

[push]
	default = current

[rebase]
	stat = true

[rerere]
	enabled = true
	autoupdate = true

